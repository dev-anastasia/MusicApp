<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="PlayerFragmentText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="ItemViewText" parent="TextAppearance.AppCompat">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FloatingActionButton" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/add_new_playlist</item>
    </style>

</resources>