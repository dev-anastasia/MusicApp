<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/player_activity_btn_go_back"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/icon_go_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="3dp"
            android:text="@string/activity_player_tv_top_info"
            android:textSize="14sp"
            android:textStyle="italic" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/player_activity_iv_cover"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:layout_marginStart="32dp"
                android:background="@drawable/image_cover_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/player_activity_tv_song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/player_activity_iv_cover"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Billie Jean" />

            <TextView
                android:id="@+id/player_activity_tv_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:maxLines="2"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/player_activity_iv_cover"
                app:layout_constraintTop_toBottomOf="@+id/player_activity_tv_song_name"
                tools:text="Michael Jackson" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/player_activity_iv_icon_media"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/icon_media_empty" />

            <TextView
                android:id="@+id/player_activity_tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_time" />

            <SeekBar
                android:id="@+id/player_activity_seekbar"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:thumb="@drawable/icon_circle" />

            <TextView
                android:id="@+id/player_activity_tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="4:37" />

            <ImageView
                android:id="@+id/player_activity_iv_icon_fav"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="32dp"
                android:src="@drawable/icon_fav_empty" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/player_activity_iv_icon_prev"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="34dp"
                android:src="@drawable/icon_prev" />

            <ImageView
                android:id="@+id/player_activity_iv_icon_play"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="34dp"
                android:src="@drawable/icon_play" />

            <ImageView
                android:id="@+id/player_activity_iv_icon_next"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_next" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>