<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".presentation.ui.media.AddPlaylistFragment">

    <TextView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/add_playlist"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_new_playlist_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:imeOptions="flagNoExtractUi"
        android:maxLength="30"
        android:maxLines="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_commit_add_playlist"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="24dp"
            android:background="@drawable/icon_check" />

        <ImageButton
            android:id="@+id/btn_cancel_adding"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/icon_cancel" />

    </LinearLayout>

</LinearLayout>